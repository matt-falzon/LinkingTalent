<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="0dp"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="@drawable/background"
              tools:context="com.ridebooker.linkingtalent.LoginActivity"
              android:weightSum="1">

    <!-- Login progress
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"

        android:visibility="visible"/>
-->
    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_lt_logo"
            android:layout_width="286dp"
            android:layout_height="119dp"
            android:layout_gravity="center"
            android:contentDescription="Linking Talent logo"
            android:onClick="onClickImg"
            android:src="@drawable/lt_title_login"/>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/edittext_border"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>

        <Button
            android:id="@+id/login_signin"
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/sign_in_border"
            android:hint="Sign In"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:text="forgot password?"
            android:textColor="@color/text_color"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:textSize="14dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/text_color"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Or Sign in With"
            android:textColor="@color/text_color"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_marginRight="2dp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/text_color"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fb_custom_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp"
            android:background="@android:color/transparent"
            android:onClick="onClickFacebook"
            android:scaleType="fitXY"
            android:src="@drawable/icon_facebook"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/li_login_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:background="@android:color/transparent"
            android:onClick="onClickLinkedin"
            android:scaleType="fitXY"
            android:src="@drawable/icon_linkedin"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fb_custom_button"
            android:layout_toEndOf="@+id/fb_custom_button" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Don't have an account yet? "
            android:textSize="18dp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/login_register"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Sign up"
            android:onClick="register"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:background="@drawable/edittext_border"/>

    </LinearLayout>
</LinearLayout>
