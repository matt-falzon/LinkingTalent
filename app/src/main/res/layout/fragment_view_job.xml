<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ridebooker.linkingtalent.ViewJobFragment"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nav_button"/>

        <TextView
            android:id="@+id/job_board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Job Post"
            android:textColor="#FBFCFD"
            android:textSize="24sp"/>
    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="0dp"
            android:background="#FBFCFD"/>


        <TextView
            android:id="@+id/view_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:hint="@string/create_job_title_hint"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#FBFCFD"
            android:textSize="36dp"/>
        <!--
        <TextView
            android:id="@+id/view_job_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_job_title"
            android:hint="@string/create_job_company_hint"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF"
            android:textSize="18dp"/>
            -->
        <!--
        <ImageView
            android:id="@+id/view_job_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/lt_symbol"/>
        -->
        <ImageView
            android:id="@+id/view_job_location_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_location"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/view_job_location"
            android:layout_toEndOf="@+id/view_job_location"/>

        <TextView
            android:id="@+id/view_job_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_job_title"
            android:layout_centerHorizontal="true"
            android:hint="@string/create_job_location_hint"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_clock"/>

        <TextView
            android:id="@+id/view_job_employment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:hint="@string/create_job_category_hint"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_bag"/>

        <TextView
            android:id="@+id/view_job_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:hint="@string/view_job_employment_type"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:textSize="18dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_money"/>

        <TextView
            android:id="@+id/view_job_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingTop="3dp"
            android:paddingLeft="5dp"
            android:text="Pay"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_trophy"/>

        <TextView
            android:id="@+id/view_job_bounty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingTop="3dp"
            android:text="Reward"
            android:textColor="#FBFCFD"
            android:textSize="18dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FBFCFD"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_job_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Overview"
            android:textColor="#FBFCFD"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="30dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/view_job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_job_descrition_hint"
                    android:paddingLeft="10dp"
                    android:textColor="#FBFCFD"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/tv_view_job_view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickViewMore"
                    android:paddingTop="10dp"
                    android:text="View More.."
                    android:textColor="#FBFCFD"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </ScrollView>
        <!-- this puts the bottom nav anchor'd to the bottom of the screen
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>-->

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/view_job_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:itemIconTint="#FBFCFD"
            app:itemTextColor="#FBFCFD"
            app:menu="@menu/view_job_bottom_navigation"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_above="@id/view_job_bottom_navigation"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FBFCFD"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="10dp"/>

</LinearLayout>