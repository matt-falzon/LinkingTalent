<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ridebooker.linkingtalent.ViewJobFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/view_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_job_title_hint"
        android:textSize="50dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/view_job_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_job_company_hint"
        android:textSize="35dp"
        />

    <TextView
        android:id="@+id/view_job_first_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_job_first_cat_hint"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/view_job_second_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_job_second_cat_hint"
        android:textSize="25dp"
        />

        <TextView
            android:id="@+id/view_job_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/create_job_location_hint"
            android:textSize="25dp"
            android:paddingTop="5dp"
            />

    <TextView
        android:id="@+id/view_job_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/create_job_descrition_hint"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/view_job_bounty_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Bounty"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_job_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Pay"
            android:paddingRight="10dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/view_job_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Pay"
            android:paddingLeft="10dp"
            android:textSize="25dp"
            />
    </LinearLayout>


</LinearLayout>
