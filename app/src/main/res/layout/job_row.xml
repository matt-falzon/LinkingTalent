<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="105dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >

    <RelativeLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/job_frag"
                  android:paddingLeft="7.5dp"
                  android:paddingRight="7.5dp"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp"
                  android:background="@drawable/job_row_background">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lt_symbol"
            android:id="@+id/iv_job_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textSize="26dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_job_image"
            android:layout_toEndOf="@+id/iv_job_image"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"/>

        <TextView
            android:id="@+id/tv_job_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="18dp"
            android:layout_below="@+id/tv_job_title"
            android:layout_alignLeft="@+id/tv_job_title"
            android:layout_alignStart="@+id/tv_job_title"/>

        <TextView
            android:id="@+id/tv_job_bounty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bounty"
            android:textSize="18dp"
            android:textColor="#0bb7dd"
            android:layout_below="@+id/tv_job_company"
            android:layout_alignLeft="@+id/tv_job_company"
            android:layout_alignStart="@+id/tv_job_company"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/iv_job_image"/>

    </RelativeLayout>

</LinearLayout>