<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="105dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/job_frag"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="7.5dp"
            android:paddingRight="7.5dp"
            android:paddingTop="5dp">
            <!--
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/lt_symbol"
                android:id="@+id/iv_job_image"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_job_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textSize="18dp"
                android:layout_below="@+id/tv_job_title"
                android:layout_alignLeft="@+id/tv_job_title"
                android:layout_alignStart="@+id/tv_job_title"/>
                -->
            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"

                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Job Title"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tv_job_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Location"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tv_job_bounty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bounty"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                android:layout_alignBottom="@+id/view2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="90dp"
                android:background="#FFFFFF"
                android:paddingLeft="35dp"
                android:paddingRight="35dp" />
            <!--

        -->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="22dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/next_arrow" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>